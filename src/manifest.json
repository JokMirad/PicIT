{
	"manifest_version": 2,
	"name": "PicIT",
	"description": "Context menu extension, convert links and selected text into QRCode popup",
	"version": "1.5",
	"homepage_url": "https://github.com/JokMirad/PicIT",
	"default_locale": "de",
	"author": "PicIT.JokMirad@gmail.com",

	"browser_specific_settings": {
		"gecko": {
			"id": "PicIT.JokMirad@gmail.com",
			"strict_min_version": "79.0"
		}
	},

	"permissions": [
		"activeTab",
		"contextMenus",
		"storage",
		"clipboardRead",
		"downloads"
	],

	"icons": {
		"12": "_icons/12x12.png",
		"16": "_icons/16x16.png",
		"24": "_icons/24x24.png",
		"48": "_icons/48x48.png"
	},

	"background": {
		"page": "background/background.html"
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"12": "_icons/12x12.png",
			"16": "_icons/16x16.png",
			"24": "_icons/24x24.png",
			"48": "_icons/48x48.png"
		},
		"default_title": "PicIT",
		"default_popup": "browserAction/browserAction.html"
	}
}